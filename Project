def product_list():
# the individual dictionaries
	products = {"A1": "Swedish Fish",
		"A2": "Apple", 
		"A3": "Poprocks", 
		"A4": "Beef Jerky", 
		"A5": "Cheetos"}
	return products
    
    
def save_to_txt(product_name, change):
	print("Would you like to save this?\n")
	yes_no = input("Y/N: ").upper()
	if yes_no == "Y":
		with open('savefile.txt', 'w') as save_file:
			save_file.write(f"You bought {product_name}, {change} sheckles left")
		print("SAVED!")
	else:
		pass

    
def main():
	#prices=vend_intro()
	user_sheckles=int(input("Enter amount of Sheckles (MUST BE WHOLE NUMBER): "))
	user_code=input("Enter product code: ").upper()
	# THE COMMENTED OUT CODE BELOW WAS A TEST CODE
	'''user_code=="A1":
